{% extends '/template/base.html.twig' %}
{% import '/template/content.html.twig' as content %}
{% import "/common/components/data.html.twig" as data %}
{% import "/common/components/page.html.twig" as pages %}


{% block stylesheets %}
    {% if editMode %}
        <link href="/plugins/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
        <link href="/plugins/edit-tools/edit-tools.css" rel="stylesheet">
        <link href="/plugins/slide-panel/style.css" rel="stylesheet">
        <link href="/plugins/fancybox-3.0/dist/jquery.fancybox.min.css" rel="stylesheet">
        <link href="/plugins/bootstrap-iconpicker-1.9.0/dist/css/bootstrap-iconpicker.min.css" rel="stylesheet">

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/material-design-iconic-font/2.2.0/css/material-design-iconic-font.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/octicons/4.4.0/font/octicons.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/typicons/2.0.9/typicons.min.css"/>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/weather-icons/1.3.1/css/weather-icons.min.css"/>

        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/flag-icon-css/2.8.0/css/flag-icon.min.css"/>
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% if editMode %}

        {{ content.defineJsComponentList() }}

        <script src="/plugins/bootstrap3-editable/js/bootstrap-editable.js"></script>
        <script src="/plugins/bootstrap3-editable/js/link-editable.js"></script>
        <script src="/plugins/bootstrap3-editable/js/code-editable.js"></script>
        <script src="/plugins/fancybox-3.0/dist/jquery.fancybox.min.js"></script>
        <script src="/plugins/bootstrap-iconpicker-1.9.0/dist/js/bootstrap-iconpicker-iconset-all.min.js"></script>
        <script src="/plugins/bootstrap-iconpicker-1.9.0/dist/js/bootstrap-iconpicker.js"></script>

        <script src="/plugins/edit-tools/edit-tools.js"></script>

    {% endif %}

{% endblock %}

{% block pageSettings %}
    {% if editMode %}
        {{ pages.removeElementModal() }}
        {{ data.removeDocumentModal() }}
    {% endif %}
{% endblock %}

