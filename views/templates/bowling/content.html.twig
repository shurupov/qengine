{% macro component(key, section, pageId, path, editMode) %}

    {% import '/templates/bowling/components/top.html.twig' as top %}
    {% import '/templates/bowling/components/components.html.twig' as components %}

    {% if section.type == "SliderHeadingSection" %}              {{ top.SliderHeadingSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "SimpleHeadingSection" %}          {{ top.SimpleHeadingSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "AboutAndServicesSection" %}       {{ components.AboutAndServicesSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "DescribedPictureListSection" %}   {{ components.DescribedPictureListSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "TestimonialsSection" %}           {{ components.TestimonialsSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "PhotoSliderSection" %}            {{ components.PhotoSliderSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "MapSection" %}                    {{ components.MapSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "PriceSection" %}                  {{ components.PriceSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "AboutSection" %}                  {{ components.AboutSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "MembershipSection" %}             {{ components.MembershipSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "TableSection" %}                  {{ components.TableSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "PhotoGallerySection" %}           {{ components.PhotoGallerySection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "FeedbackFormSection" %}           {{ components.FeedbackFormSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% elseif section.type == "JustTextSection" %}               {{ components.JustTextSection(section, pageId, 'sections.' ~ key, editMode) }}
    {% endif %}

