<body data-spy="scroll" data-target="#page-nav">

<!-- ******HEADER****** -->
<header id="header" class="header">
    <div class="container">
        <h1 class="logo">
            <a href="/"><img src="/i/logo.png" alt="">&nbsp;<span class="text">221-03-39</span></a>
        </h1><!--//logo-->
        <nav class="main-nav navbar-right" role="navigation">
            <div class="navbar-header">
                <button class="navbar-toggle" type="button" data-toggle="collapse" data-target="#navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button><!--//nav-toggle-->
            </div><!--//navbar-header-->
            <div id="navbar-collapse" class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    {% set pages = [
                        {
                            slug : '',
                            title : 'Главная'
                        } ,{
                            slug : 'price',
                            title : 'Цены'
                        } ,{
                            slug : 'faq',
                            title : 'Вопрос-ответ'
                        } ,{
                            slug : 'gallery',
                            title : 'Галерея'
                        } ,{
                            slug : 'contacts',
                            title : 'Контакты'
                        }
                    ] %}
                    {% for p in pages %}
                        <li class="{% if p.slug == slug %}active {% endif %}nav-item"><a href="/{{ p.slug }}">{{ p.title }}</a></li>
                    {% endfor %}
                </ul><!--//nav-->
            </div><!--//navabr-collapse-->
        </nav><!--//main-nav-->
    </div><!--//container-->
</header><!--//header-->

{% block body %}{% endblock %}

