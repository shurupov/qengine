{% macro pageProperties(page, slug, editMode) %}

    {% import "/common/components/data.html.twig" as data %}

    {% if editMode %}
        <input type="checkbox" name="toggle" id="toggle" />
        <div class="message">
            <label id="settings-label" class="btn" for="toggle">Параметры страницы</label>
            <h1>Параметры страницы</h1>
            <h2>Title {{ data.text(page.title, slug, 'title', editMode) }}</h2>
        </div>
    {% endif %}

{% endmacro %}

{% macro addItemButton(type, caption, fields = []) %}

    <button class="btn btn-primary btn-add-{{ type }}" data-toggle="modal" data-target="#add-{{ type }}-modal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> {{ caption }}</button>

    <!-- Settings Modal -->
    <div class="modal modal-settings" id="add-{{ type }}-modal" tabindex="-1" role="dialog" aria-labelledby="add-{{ type }}-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/e/{{ type }}/add" method="post">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    <h4 id="add-{{ type }}-modal-label" class="modal-title text-center">{{ caption }}</h4>
                </div>
                <div class="modal-body">

                    {% for field in fields %}
                        <div class="form-group">
                            <label for="new-{{ type }}-{{ field.name }}-input">{{ field.caption }}</label>
                            <input type="text" name="{{ field.name }}" class="form-control" id="new-{{ type }}-{{ field.name }}-input" placeholder="{{ field.placeholder }}">
                        </div>
                    {% endfor %}

                </div><!--//modal-body-->
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                    <button type="submit" class="btn btn-primary" id="add-{{ type }}-button">Добавить</button>
                </div>
                </form>
            </div><!--//modal-content-->
        </div><!--//modal-dialog-->
    </div><!--//modal-->

{% endmacro %}

{% macro addMenuLinkButton() %}

    <button class="btn btn-primary btn-add-menu-link" data-toggle="modal" data-target="#add-menu-link-modal"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Добавить ссылку в меню</button>

    <!-- Settings Modal -->
    <div class="modal modal-settings" id="add-menu-link-modal" tabindex="-1" role="dialog" aria-labelledby="add-menu-link-modal-label" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="/e/add-menu-link" method="post">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 id="add-menu-link-modal-label" class="modal-title text-center">Добавить ссылку в меню</h4>
                    </div>
                    <div class="modal-body">

                        <div class="form-group">
                            <label for="new-page-uri-input">URI</label>
                            <input type="text" name="slug" class="form-control" id="new-page-uri-input" placeholder="newpage">
                        </div>

                        <div class="form-group">
                            <label for="new-page-title-input">Текст</label>
                            <input type="text" name="title" class="form-control" id="new-page-title-input" placeholder="Заголовок новой страницы">
                        </div>

                    </div><!--//modal-body-->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        <button type="submit" class="btn btn-primary" id="add-menu-link-button">Добавить</button>
                    </div>
                </form>
            </div><!--//modal-content-->
        </div><!--//modal-dialog-->
    </div><!--//modal-->

{% endmacro %}

{% macro loginForm() %}

    <div class="container">

        <div class="row">

            <div class="col-sm-offset-3 col-md-offset-4 col-sm-6 col-md-4">

                <div class="title"><span>Вход в админку</span></div>

                <form action="" method="post">

                    <div class="form-group">
                        <label for="username">Имя пользователя</label>
                        <input type="text" id="username" name="username" class="form-control" autofocus/>
                    </div>

                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" id="password" name="password" class="form-control"/>
                    </div>

                    <button type="submit" class="btn btn-theme">
                        <i class="fa fa-long-arrow-right"></i>
                        Войти
                    </button>

                </form>

            </div>

        </div>

    </div>

{% endmacro %}

{% macro table(items, type, caption, addCaption, fields) %}

    {% set editMode = true %}
    {% import "/common/components/data.html.twig" as data %}
    {% import _self as admin %}

    <table class="table table-hover">
        <caption>{{ caption }}</caption>
        <thead class="hidden-sm hidden-xs">
        <tr>
            <th>
                <div class="row">
                    {% for field in fields %}
                        <div class="col-md-{% if loop.last %}{{ (field.columns + 1) }}{% else %}{{ field.columns }}{% endif %}">{{ field.caption }}</div>
                    {% endfor %}
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for item in items %}
            <tr>
                <td>
                    <div class="row">
                        {% for field in fields %}
                            <div class="col-md-{{ field.columns }}">{{ data.text(item[field.name], item.slug, field.name, editMode) }}{% if field.link %} <a href="/{{ item.slug }}">ссылка</a>{% endif %}</div>{# Надо параметризировать по какому полю будет искаться зама запись, то что в page slug #}
                        {% endfor %}
                        <div class="col-md-1"><a class="remove-page-button" href="/e/{{ type }}/remove?{{ fields[0].name }}={{ item[fields[0].name] }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ admin.addItemButton(type, addCaption, fields) }}

{% endmacro %}

{% macro menuTable(menu) %}

    {% set editMode = true %}
    {% import "/common/components/data.html.twig" as data %}
    {% import _self as admin %}

    <table class="table table-hover">
        <caption>Ссылки меню сайта</caption>
        <thead class="hidden-sm hidden-xs">
        <tr>
            <th>
                <div class="row">
                    <div class="col-md-3">URI</div>
                    <div class="col-md-9">Текст</div>
                </div>
            </th>
        </tr>
        </thead>
        <tbody>
        {% for link in menu %}
            <tr>
                <td>
                    <div class="row">
                        <div class="col-md-3">{#{{ data.text(page.slug, page.slug, 'slug', editMode) }}#} <a href="{{ link.uri }}">ссылка</a></div>
                        <div class="col-md-8"> {{ link.text }} {#{{ data.text(page.title, page.slug, 'title', editMode) }}#}</div>
                        <div class="col-md-1"><a class="remove-page-button" href="/e/remove-menu-link?id={{ link._id }}"><span class="glyphicon glyphicon-remove" aria-hidden="true"></span></a></div>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {{ admin.addMenuLinkButton() }}

{% endmacro %}

{% macro adminPanel(pages, menu) %}

    {% import "/common/components/data.html.twig" as data %}
    {% import _self as admin %}

    <div class="container" style="margin-top: 180px;">
        <div class="row">
            <div class="col-sm-12">

                {{ admin.table(pages, 'page', 'Страницы сайта', 'Добавить страницу', [
                    {
                        'name': 'slug',
                        'caption': 'URI',
                        'placeholder': 'newpage',
                        'columns': 3,
                        'link': true
                    }, {
                        'name': 'title',
                        'caption': 'Заголовок',
                        'placeholder': 'Заголовок новой страницы',
                        'columns': 8
                    }
                ]) }}

                <br/><br/><br/>

                {{ admin.menuTable(menu) }}

            </div>
        </div>
    </div>

{% endmacro %}

{% macro admin(editMode, pages = [], menu = []) %}

    {% import _self as admin %}

    {% if editMode %}
        {{ admin.adminPanel(pages, menu) }}
    {% else %}
        {{ admin.loginForm() }}
    {% endif %}

{% endmacro %}