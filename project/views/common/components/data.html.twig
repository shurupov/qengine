{% macro setImagePreviewButton(value, id, path, editMode = false, default = '/source/previewDefault.jpg') %}
    {% import _self as data %}
    {% if value is empty %}
        {% set value = default %}
    {% endif %}
    {% if editMode %}
        {% set inputId = path | replace({'.': '-'}) %}
        <input type="hidden" id="{{ inputId | raw }}" data-pk="{{ id }}" />
