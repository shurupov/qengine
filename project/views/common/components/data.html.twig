{% macro addImagePreviewButton(path, id, editMode = false, caption = "Добавить элемент") %}
    {% if editMode %}<button type="button" class="btn btn-primary btn-add-image-preview" data-path="{{ path | raw }}" data-pk="{{ id }}">{{ caption }}</button>{% endif %}
{% endmacro %}

{% macro select(value, id, path, editMode = false, options = [], inSettings = false) %}
    {% import _self as data %}
    {% if editMode %}
        {% set initCaption = "Пусто" %}
        {% for option in options %}
            {% if value == option.value %}
                {% set initCaption = option.text %}
            {% endif %}
        {% endfor %}
        <e{% if inSettings %}s{% endif %} data-type="select" data-url="/e/page/edit" data-pk="{{ id }}" data-name="{{ path }}" data-value="{{ value | raw }}" data-source="{{ options | json_encode }}">{{ initCaption | raw }}</e{% if inSettings %}s{% endif %}>
    {% else %}
        {{- value | raw -}}
    {% endif %}
{% endmacro %}

