{% macro MembershipSection(section, pageId, path, editMode) %}

    {% import "/common/components/data.html.twig" as data %}

    <!--Membership-->
    <div class="container padd-70">

        <div class="col-md-12 text-center">
            <h2 class="welc-h3" style="margin-bottom:10px;">{{ data.text(section.title, pageId, path ~ '.title', editMode) }}{{ data.settingsButton(path, editMode) }}</h2>
            <span class="testimonial-under" style="margin-bottom:5px;"></span>
            <p class="head-p">{{ data.text(section.description, pageId, path ~ '.description', editMode) }}</p>
        </div>
        <div class="clearfix"></div>

            {{ data.settingsModal(section, pageId, path,
                {
                    'columnWidth': {
                        'type': 'select',
                        'title': 'Максимальное количество колонок',
                        'options': [
                            {value: 3, text: '4'},
                            {value: 4, text: '3'},
                            {value: 2, text: '6'}
                        ]
                    }
                },
            editMode) }}

        <div class="row">

            {% set rateCount = section.rates | length %}

            {% set width = section.columnWidth ? section.columnWidth : 3 %}

            {% set offset = (12 - width * rateCount) // 2 %}

            {% for k, rate in section.rates %}

                {% set ratePath = path ~ '.rates.' ~ k %}

                <div class="col-sm-6 col-md-{{ width }} text-center{% if loop.first %} col-md-offset-{{ offset }}{% endif %}">

                    <div class="plan-body"{% if editMode %} style="overflow: inherit;" {% endif %}>
                        {% if rate.showDiscount %}<div class="offer-label">{{ rate.discount }}</div>{% endif %}
                        <h2>{{ data.text(rate.title, pageId, ratePath ~ '.title', editMode) }}{{ data.settingsButton(ratePath, editMode) }}{{ data.removeElementButton(ratePath, pageId, editMode) }}</h2>
                        <p>{{ data.text(rate.description, pageId, ratePath ~ '.description', editMode) }}</p>
                        <div class="price-body"><span>{{ data.text(rate.price, pageId, ratePath ~ '.price', editMode) }}<span class="glyphicon glyphicon-ruble" aria-hidden="true" style="font-size: smaller;"></span></span><h5>{{ data.text(rate.perWho, pageId, ratePath ~ '.perWho', editMode) }}</h5></div>
                        <ul>
                            {% for sk, service in rate.services %}
                                {% set servicePath = ratePath ~ '.services.' ~ sk %}
                                <li>{{ data.text(service.title, pageId, servicePath ~ '.title', editMode) }}{{ data.removeElementButton(servicePath, pageId, editMode) }}</li>
                            {% endfor %}
                            {{ data.addElementButton(ratePath ~ '.services', pageId, editMode, "Добавить услугу") }}
                        </ul>
                        {% if rate.showButton %}
                            {{ data.a(rate.button, pageId, ratePath ~ '.button', editMode) }}
                        {% endif %}
                    </div>

                </div>

                {{ data.settingsModal(rate, pageId, ratePath,
                    {
                        'showButton': {
                            'type': 'select',
                            'title': 'Кнопка внизу',
                            'options': [
                                {value: 0, text: 'Отсутствует'},
                                {value: 1, text: 'Есть'}
                            ]
                        },
                        'showDiscount': {
                            'type': 'select',
                            'title': 'Скидка есть',
                            'options': [
                                {value: 0, text: 'Отсутствует'},
                                {value: 1, text: 'Есть'}
                            ]
                        },
                        'discount': {
                            'type': 'text',
                            'title': 'Скидка'
                        },
                    },
                editMode) }}

            {% endfor %}

            <div class="clearfix"></div>

        </div>

        {% if editMode %}
            <div class="text-center" style="padding: 15px 0;">
                {{ data.addElementButton(path ~ '.rates', pageId, editMode, "Добавить тариф") }}
                {{ data.removeElementBigButton(path, pageId, editMode, 'Удалить компонент') }}
            </div>
        {% endif %}

    </div>

{% endmacro %}

