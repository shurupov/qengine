{% macro AboutAndServicesSection(section, pageId, path, editMode) %}

    {% import "/common/components/data.html.twig" as data %}

    <!--Top-->
    <div class="container-fluid" style="background-image:url({{ section.bg | default('/templates/bowling/images/welcome-bg.jpg') }}); background-repeat:no-repeat;">

        {% if section.showAbout %}

            <div class="container about-sec">
                <div class="col-md-1"></div>
                <div class="col-md-5 padd-50">
                    <h2 class="welc-h2">{{ data.text(section.about.title, pageId, path ~ '.about.title', editMode) }}</h2>
                    <div class="h2-underline"></div>
                    <h3 class="welc-h3">{{ data.text(section.about.subtitle, pageId, path ~ '.about.subtitle', editMode) }}</h3>
                </div>

                <div class="col-md-5 padd-50" style="padding-right:50px;">
                    <h2 class="story-h2">{{ data.text(section.about.story.title, pageId, path ~ '.about.story.title', editMode) }}</h2>
                    <p class="story-p">{{ data.text(section.about.story.description, pageId, path ~ '.about.story.description', editMode) }}</p>
                    {#<div class="read-more text-center"><a href="about-us.html"><img src="/templates/bowling/images/read-ball.png"  style="margin-top:15px;"><br /><span>Далее</span></a></div>#}
                </div>
                <div class="col-md-1"></div>

                <div class="clearfix"></div>
            </div>

        {% endif %}

        {% if editMode %}
            <div class="text-center" style="font-size: 30px;">
                {{ data.setImageButton(section.bg, pageId, path ~ '.bg', editMode, '/templates/bowling/images/welcome-bg.jpg') }}
                {{ data.settingsButton(path, editMode) }}
                {{ data.removeElementButton(path, pageId, editMode) }}
            </div>
        {% endif %}

        <div class="container">

            <div class="col-xs-12 col-md-1"></div>

            <div class="col-xs-12 col-md-10 top-sec padd-50">

                {% for k, block in section.blocks %}

                    {% set blockPath = path ~ '.blocks.' ~ k %}

                    {% if block.pictureInRight %}
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-4 box-1 text-center"{% if editMode %} style="overflow: inherit;"{% endif %}>
                                <h2 class="welc-h2" style="color:#FFF;">{{ data.text(block.title, pageId, blockPath ~ '.title', editMode) }}
                                    {{ data.setImageButton(block.image, pageId, blockPath ~ '.image', editMode, '/templates/bowling/images/box-3.jpg') }}
                                    {{ data.settingsButton(blockPath, editMode) }}
                                    {{ data.removeElementButton(blockPath, pageId, editMode) }}
                                </h2>
                                <p>{{ data.text(block.description, pageId, blockPath ~ '.description', editMode) }}</p>
                                <span class="perspective">{{ data.a(block.button, pageId, blockPath ~ '.button', editMode, {class: 'btn-2 btn-8 btn-8a'}) }}</span>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-8 col-md-offset-4" style="padding:0;"><img src="{{ block.image | default('/templates/bowling/images/box-2.jpg') }}" class="img-responsive" /></div>
                        </div>
                    {% else %}
                        <div class="row">
                            <!--2nd row-->
                            <div class="col-xs-12 col-sm-12 col-md-8 box-2 text-center"{% if editMode %} style="overflow: inherit;"{% endif %}>
                                <h2 class="welc-h2" style="color:#FFF; margin-bottom:15px;">{{ data.text(block.title, pageId, blockPath ~ '.title', editMode) }}
                                    {{ data.setImageButton(block.image, pageId, blockPath ~ '.image', editMode, '/templates/bowling/images/box-3.jpg') }}
                                    {{ data.settingsButton(blockPath, editMode) }}
                                    {{ data.removeElementButton(blockPath, pageId, editMode) }}
                                </h2>
                                <p>{{ data.text(block.description, pageId, blockPath ~ '.description', editMode) }}</p><br />
                                <span class="perspective">{{ data.a(block.button, pageId, blockPath ~ '.button', editMode, {class: 'btn-2 btn-8 btn-8a'}) }}</span>
                            </div>
                            <div class="col-xs-12 col-sm-12 col-md-4" style="padding:0;"><img src="{{ block.image | default('/templates/bowling/images/box-3.jpg') }}" class="img-responsive" /></div>
                        </div>
                    {% endif %}

                    {{ data.settingsModal(block, pageId, blockPath,
                        {
                            'pictureInRight': {
                                'type': 'select',
                                'title': 'Картинка',
                                'options': [
                                    {value: 0, text: 'Слева'},
                                    {value: 1,  text: 'Справа'}
                                ]
                            }
                        },
                    editMode) }}

                {% endfor %}

            </div>

            <div class="col-xs-12 col-md-1"></div>

            <div class="clearfix"></div>

        </div>

        {% if editMode %}
            <div class="text-center" style="padding: 15px 0;">
                {{ data.addElementButton(path ~ '.blocks', pageId, editMode, "Добавить блок") }}
                {{ data.removeElementBigButton(path, pageId, editMode, 'Удалить компонент') }}
            </div>
        {% endif %}

        {{ data.settingsModal(section, pageId, path,
            {
                'showAbout': {
                    'type': 'select',
                    'title': 'Секция "О нас"',
                    'options': [
                        {value: 0, text: 'Отсутствует'},
                        {value: 1, text: 'Есть'}
                    ]
                }
            },
        editMode) }}

    </div>

{% endmacro %}

