{% extends '/templates/startup-kit/structure/base.html.twig' %}
{% import "/common/components/data.html.twig" as data %}

{% set pageTitle %}{{ page.title | raw }}{% endset %}

{% block stylesheets %}
    {% if editMode %}
        <link href="/plugins/bootstrap3-editable/css/bootstrap-editable.css" rel="stylesheet">
        <link href="/plugins/edit-tools/edit-tools.css" rel="stylesheet">
        <link href="/plugins/slide-panel/style.css" rel="stylesheet">
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% if editMode %}
        <script src="/plugins/bootstrap3-editable/js/bootstrap-editable.js"></script>
        <script src="/plugins/bootstrap3-editable/js/link-editable.js"></script>
        <script src="/plugins/edit-tools/edit-tools.js"></script>
        <script src="/templates/startup-kit/js/demo/style-switcher.js"></script>

        <script>
            var componentsList = {
                'SimpleHeadingSection':  'Простая шапка сайта',
                'PromoHeadingSection':   'Шапка (меняющийся фон, кнопка призыва)',

                'PageNavSection':        'Панель навигации по странице',

                'OverviewSection':       'Описание (три устройства и текст)',
                'FeaturePreviewSection': 'Описание (одна картинка, текст и фичи)',
                'FeatureBlocksSection':  'Список фич (картинка и текст)'

            };
        </script>

    {% endif %}

    <!-- Vimeo video API -->
    <script src="http://a.vimeocdn.com/js/froogaloop2.min.js"></script>
    <script type="text/javascript" src="/templates/startup-kit/js/vimeo.js"></script>

{% endblock %}

{% block pageSettings %}

    {% if editMode %}

        <div class="modal fade" id="delete-item-modal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="exampleModalLabel">Удаление элемента</h4>
                    </div>
                    <div class="modal-body">
                        Уверены, что хотите удалить этот элемент?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-theme btn-primary" id="confirm-delete-button" data-dismiss="modal">Да</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Нет</button>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" id="remove-page-confirm-modal" tabindex="-1" role="dialog" aria-labelledby="remove-page-confirm-modal-label" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h4 id="remove-page-confirm-modal-label" class="modal-title text-center">Удаление страницы</h4>
                    </div>
                    <div class="modal-body">
                        Уверены, что хотите удалить страницу?
                    </div><!--//modal-body-->
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Закрыть</button>
                        <a class="btn btn-primary" id="remove-page-confirm-button">Удалить</a>
                    </div>
                </div><!--//modal-content-->
            </div><!--//modal-dialog-->
        </div><!--//modal-->

    {% endif %}

{% endblock %}

