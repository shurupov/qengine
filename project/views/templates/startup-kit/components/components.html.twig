{% macro featureBlocksSection(sectionData, slug, path, editMode) %}

    {% import "/data.html.twig" as data %}

    <div class="feature-blocks container">

        {% for key, feature in sectionData.features %}
            {% set featurePath = path ~'.features.' ~ key %}
            <div id="feature-block-{{ key | raw }}" class="feature-block feature-block-{{ key | raw }}">
                <div class="row">
                    <div class="feature-content col-md-4 col-sm-6 col-xs-12{% if feature.onTheLeft == "image" %} col-md-push-8 col-sm-push-6 col-xs-push-0{% endif %}">
                        <h3 class="feature-title">{{ data.text(feature.title, slug, featurePath ~ '.title', editMode) }}{{ data.settingsButton(featurePath, editMode) }}{{ data.removeElementButton(featurePath, slug, editMode) }}</h3>
                        <div class="feature-desc">
                            <p>{{ data.textarea(feature.description, slug, featurePath ~ '.description', editMode) }}</p>
                        </div><!--//feature-desc-->
                    </div><!--//feature-content-->
                    <div class="feature-figure col-md-8 col-sm-6 col-xs-12{% if feature.onTheLeft == "image" %} col-md-pull-4 col-sm-pull-6 col-xs-pull-0{% endif %}">
                        <div class="figure-holder">
                            {{ data.image(feature.image, slug, featurePath ~ '.image', editMode, {class: 'img-responsive'}, "/templates/startup-kit/images/features/feature-2.png") }}
                        </div><!--//figure-holder-->
                    </div>
                </div><!--//row-->
            </div><!--//feature-block-->
            {{ data.settingsModal(feature, slug, featurePath, {
                'onTheLeft': {
                    'type': 'select',
                    'title': 'Расположение',
                    'options': [
                        {value: 'image', text: 'Картинка слева'},
                        {value: 'text', text: 'Картинка справа'}
                    ]
                }
            }, editMode) }}
        {% endfor %}

        {{ data.addElementButton(path ~ '.features', slug, editMode, "Добавить блок с текстом и картинкой") }}

        {{ data.removeElementBigButton(path, slug, editMode, "Удалить все блоки") }}

    </div><!--//feature-blocks-->

{% endmacro %}

