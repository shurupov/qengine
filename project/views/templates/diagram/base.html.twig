{% import "/common/components/data.html.twig" as data %}<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="Grid Bootstrap">
    <meta name="description" content="">

    <title>{% block title %}{% endblock %}</title>

    <!-- CSS -->
    <link rel="stylesheet" href="/templates/diagram/css/bootstrap.min.css">
    <link rel="stylesheet" href="/templates/diagram/css/font-awesome.min.css">
    <link rel="stylesheet" href="/templates/diagram/css/animate.css">
    <link rel="stylesheet" href="/templates/diagram/css/magnific-popup.css">
    <link rel="stylesheet" href="/templates/diagram/css/owl.carousel.css">
    <link rel="stylesheet" href="/templates/diagram/css/main.css">
    <link rel="stylesheet" href="/templates/diagram/css/responsive.css">
    <link rel="stylesheet" href="/templates/diagram/css/additional.css">
    <link rel="stylesheet" href="/templates/diagram/fonts/flaticon/flaticon.css">

    {% block stylesheets %}{% endblock %}

    <!-- icons -->
    <link rel="icon" href="/templates/diagram/images/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="144x144" href="/templates/diagram/images/ico/apple-touch-icon-144-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/templates/diagram/images/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/templates/diagram/images/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="57x57" href="/templates/diagram/images/ico/apple-touch-icon-57-precomposed.png">
    <!-- icons -->

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="/templates/diagram/https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="/templates/diagram/https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Developed By Grid Bootstrap -->

</head>
<body>
<header id="header">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-sm-8">
                    <div class="info-box">
                        <i class="fa fa-envelope"></i>
                        <div class="info-text">
                            <h5>Электропочта:</h5>
                            {% if editMode %}
                                {{ data.textSetting(settings.email, editMode, 'bottom') }}
                            {% else %}
                                <a href="mailto:{{ settings.email.value }}">{{ settings.email.value }}</a>
                            {% endif %}
                        </div>
                    </div>
                    <div class="info-box">
                        <i class="fa fa-phone"></i>
                        <div class="info-text">
                            <h5>Телефон:</h5>
                            <span>{{ data.textSetting(settings.phone, editMode, 'bottom') }}</span>
                        </div>
                    </div>
                    <div class="info-box">
                        <i class="fa fa-clock-o"></i>
                        <div class="info-text">
                            <h5>Мы открыты:</h5>
                            {% if editMode %}
                                <span>{{ data.textSetting(settings.workHoursTop, editMode, 'bottom') }}</span>
                            {% else %}
                                <a href="/contacts">{{ settings.workHoursTop }}</a>
                            {% endif %}

                        </div>
                    </div>
                </div>

            </div>
        </div><!-- container -->
    </div><!-- top-bar -->

    <div class="main-menu">
        <nav class="navbar navbar-default">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="/"><img class="img-responsive" src="/templates/diagram/images/stroitek/logo.png" alt="Logo"></a>
                </div>
                <div class="collapse navbar-collapse" id="navbar-collapse">
                    <ul class="nav navbar-nav navbar-right">
                        {% for link in topMenu %}
                            <li><a{% if link.uri == requestUri %} class="active"{% endif %} href="{{ link.uri }}">{{ link.text | upper }}</a></li>
                        {% endfor %}
                    </ul>
                </div>
            </div><!-- container -->
        </nav><!-- navbar -->
    </div><!-- main menu -->
</header><!-- Header -->

{% block body %}{% endblock %}

<footer class="footer">
    <div class="contact-section">
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="contact-widget">

                        <img class="img-responsive" src="/templates/diagram/images/logo2.png" alt="">

                        <p>{{ data.textSetting(settings.leftBottomText1, editMode) }}</p>
                        <p>{{ data.textSetting(settings.leftBottomText2, editMode) }}</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="contact-widget">
                        <h3>Часы работы</h3>
                        <p>{{ data.textSetting(settings.workhoursBottom1, editMode) }}</p>
                        <p>{{ data.textSetting(settings.workhoursBottom2, editMode) }}</p>
                        <p>{{ data.textSetting(settings.workhoursBottom3, editMode) }}</p>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="contact-widget">
                        <h3>Ссылки</h3>
                        <ul>
                            {% for link in topMenu %}
                                {% if loop.index0 == loop.length // 2 %}</ul><ul>{% endif %}
                                <li><a{% if link.uri == requestUri %} class="active"{% endif %} href="{{ link.uri }}">{{ link.text }}</a></li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="contact-widget">
                        <h3>Наш офис</h3>
                        <address>
                            <ul>
                                <li><span class="address">Address:</span>{{ data.textSetting(settings.address, editMode) }}</li>
                                <li><span>Телефон: </span>{{ data.textSetting(settings.phone, editMode) }}</li>
                                <li>
                                    <span>Email: </span>
                                    {% if editMode %}
                                        {{ data.textSetting(settings.email, editMode) }}
                                    {% else %}
                                        <a href="mailto:{{ settings.email.value }}">{{ settings.email.value }}</a>
                                    {% endif %}
                                </li>
                            </ul>
                        </address>
                        {#<ul class="footer-social list-inline">
                            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="#"><i class="fa fa-linkedin-square"></i></a></li>
                            <li><a href="#"><i class="fa fa-facebook-square"></i></a></li>
                            <li><a href="#"><i class="fa fa-pinterest-square"></i></a></li>
                        </ul>#}
                    </div>
                </div>
            </div><!-- row -->

        </div><!-- container -->
    </div><!-- contact informetion -->

    <div class="footer-bottom">
        <div class="container">
            <div class="copyright-text text-center">
                <p>СтройТЭК {{ 'now' | date('Y') }} | Разработано в  <a href="http://perfectclick.ru">Точный клик</a></p>
            </div>
        </div>
    </div><!-- footer bottom -->
</footer><!-- footer -->


{% block pageSettings %}{% endblock %}

<script>var editMode = {{ editMode ? 'true' : 'false' }};</script>

<!-- script -->
<script src="/templates/diagram/js/jquery.min.js"></script>
<script src="/templates/diagram/js/modernizr.min.js"></script>
<script src="/templates/diagram/js/bootstrap.min.js"></script>
<script src="/templates/diagram/js/owl.carousel.min.js"></script>
<script src="/templates/diagram/js/cubeportfolio.min.js"></script>
<script src="/templates/diagram/js/magnific-popup.min.js"></script>
<script src="/templates/diagram/js/jquery.backstretch.min.js"></script>
<script src="/templates/diagram/js/custom.js"></script>
<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script src="/templates/diagram/js/gmaps.min.js"></script>
<script src="/templates/diagram/js/gmaps.settings.js"></script>

{% block javascripts %}{% endblock %}

</body>
</html>