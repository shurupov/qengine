{% macro SliderHeadingSection(section, pageId, path, editMode) %}

    {% import "/common/components/data.html.twig" as data %}

    <script>
        var sliderImages = [
            {% for slide in section.slides %}
                '{{ slide.image | default('/templates/diagram/images/bg/1.jpg') }}',
            {% endfor %}
        ];
    </script>

    <div class="home-section image-bg">
        <div class="overlay"></div>
        <div class="home-content">
            <div class="container">
                <div id="home-slider" class="carousel slide carousel-fade" data-ride="carousel">
                    <div class="carousel-inner" role="listbox" {% if editMode %}style="overflow: inherit;"{% endif %}>
                        {% for k,slide in section.slides %}
                            {% set slidePath = path ~ '.slides.' ~ k %}
                            <div class="item{% if loop.first %} active{% endif %}">
                                <h2>{{ data.text(slide.title, pageId, slidePath ~ '.title', editMode) }}{{ data.setImageButton(slide.image, pageId, slidePath ~ '.image', editMode, '/templates/diagram/images/bg/1.jpg') }}{{ data.settingsButton(slidePath, editMode) }}{{ data.removeElementButton(slidePath, pageId, editMode) }}</h2>
                                {% if slide.showButton %}
                                    {{ data.a(slide.button, pageId, slidePath ~ '.button', editMode, {'class': 'btn btn-primary'}) }}
                                {% endif %}
                            </div>
                        {% endfor %}
                    </div>
                    <a class="carousel-left" href="#home-slider" data-slide="prev"><i class="fa fa-angle-left"></i></a>
                    <a class="carousel-right" href="#home-slider" data-slide="next"><i class="fa fa-angle-right"></i></a>
                </div>

                <div class="services">
                    <div class="row">
                        {% for i in [0,1,2] %}
                        <div class="col-md-4">
                            <div class="service crane-lifting image-bg">
                                <div class="overlay"></div>
                                <div class="image-box">
                                    {{ data.image(section.services[i].icon, pageId, path ~ '.services.' ~ i ~ '.icon', editMode, {class: 'img-responsive'}, '/templates/diagram/images/service/' ~ (i+1) ~ '.png') }}
                                </div>
                                <div class="box-title"{% if editMode %} style="overflow: inherit"{% endif %}>
                                    <h3>{{ data.text(section.services[i].title, pageId, path ~ '.services.' ~ i ~ '.title', editMode) }}</h3>
                                    <p>{{ data.textarea(section.services[i].description, pageId, path ~ '.services.' ~ i ~ '.description', editMode) }}</p>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div><!-- services -->
            </div><!-- container -->
        </div><!-- home content -->

        {% if editMode %}
            <div class="text-center" style="padding: 15px 0;">
                {{ data.addElementButton(path ~ '.slides', pageId, editMode, "Добавить слайд") }}
                {{ data.removeElementBigButton(path, pageId, editMode, 'Удалить слайдер') }}
            </div>
        {% endif %}
    </div><!-- home -->

    {% for k,slide in section.slides %}
        {% set slidePath = path ~ '.slides.' ~ k %}

        {{ data.settingsModal(slide, pageId, slidePath,
            {
                'showButton': {
                    'type': 'select',
                    'title': 'Кнопка призыва к действию',
                    'options': [
                        {value: 0, text: 'Отсутствует'},
                        {value: 1, text: 'Есть'}
                    ]
                }
            },
        editMode) }}

    {% endfor %}

{% endmacro %}

{% macro SimpleHeadingSection(section, pageId, path, editMode, settings) %}

    {% import "/common/components/data.html.twig" as data %}

    <div class="breadcrumb-section image-bg" style="background-image: url({{ section.bg | default('/templates/diagram/images/bg/1.jpg') }});">
        <div class="overlay"></div>
        <div class="breadcrumb-content container">
            <h1>{{ data.text(section.title, pageId, path ~ '.title', editMode) }}{{ data.setImageButton(section.bg, pageId, path ~ '.bg', editMode, '/templates/diagram/images/bg/1.jpg') }}</h1>
            <ol class="breadcrumb">
                <li><a href="/">{{ data.textSetting(settings.title, editMode) }}</a></li>
                <li class="active">{{ data.text(section.alterTitle, pageId, path ~ '.alterTitle', editMode) }}</li>
            </ol>
        </div>

        {% if editMode %}
            <div class="text-center" style="padding: 15px 0;">
                {{ data.removeElementBigButton(path, pageId, editMode, 'Удалить компонент') }}
            </div>
        {% endif %}

    </div><!-- breadcrumb-section -->

{% endmacro %}